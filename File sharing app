    <script>
        // DOM Elements
        const uploadContainer = document.getElementById('upload-container');
        const fileInput = document.getElementById('file-input');
        const browseBtn = document.getElementById('browse-btn');
        const fileInfo = document.getElementById('file-info');
        const fileName = document.getElementById('file-name');
        const fileSize = document.getElementById('file-size');
        const changeFileBtn = document.getElementById('change-file-btn');
        const messageInput = document.getElementById('message-input');
        const wordCount = document.getElementById('word-count');
        const passwordInput = document.getElementById('password-input');
        const confirmPasswordInput = document.getElementById('confirm-password-input');
        const uploadBtn = document.getElementById('upload-btn');
        const uploadResult = document.getElementById('upload-result');
        const shareLink = document.getElementById('share-link');
        const secretKey = document.getElementById('secret-key');
        const copyLinkBtn = document.getElementById('copy-link-btn');
        const accessBtn = document.getElementById('access-btn');
        const fileDetails = document.getElementById('file-details');
        const detailName = document.getElementById('detail-name');
        const detailSize = document.getElementById('detail-size');
        const detailMessage = document.getElementById('detail-message');
        const detailExpiry = document.getElementById('detail-expiry');
        const downloadBtn = document.getElementById('download-btn');
        const loginBtn = document.getElementById('login-btn');
        const signupBtn = document.getElementById('signup-btn');
        const loginModal = document.getElementById('login-modal');
        const signupModal = document.getElementById('signup-modal');
        const closeModals = document.querySelectorAll('.close-modal');
        const showSignup = document.getElementById('show-signup');
        const showLogin = document.getElementById('show-login');
        const mobileMenuBtn = document.getElementById('mobile-menu-btn');
        const navLinks = document.querySelector('.nav-links');
        const faqItems = document.querySelectorAll('.faq-item');
        
        // Variables
        let selectedFile = null;
        
        // Event Listeners
        browseBtn.addEventListener('click', () => fileInput.click());
        changeFileBtn.addEventListener('click', () => fileInput.click());
        fileInput.addEventListener('change', handleFileSelect);
        uploadContainer.addEventListener('dragover', handleDragOver);
        uploadContainer.addEventListener('dragleave', handleDragLeave);
        uploadContainer.addEventListener('drop', handleDrop);
        messageInput.addEventListener('input', updateWordCount);
        passwordInput.addEventListener('input', toggleConfirmPassword);
        uploadBtn.addEventListener('click', handleUpload);
        copyLinkBtn.addEventListener('click', copyShareLink);
        accessBtn.addEventListener('click', simulateFileAccess);
        downloadBtn.addEventListener('click', simulateDownload);
        loginBtn.addEventListener('click', () => loginModal.style.display = 'flex');
        signupBtn.addEventListener('click', () => signupModal.style.display = 'flex');
        closeModals.forEach(btn => btn.addEventListener('click', closeModal));
        showSignup.addEventListener('click', (e) => {
            e.preventDefault();
            loginModal.style.display = 'none';
            signupModal.style.display = 'flex';
        });
        showLogin.addEventListener('click', (e) => {
            e.preventDefault();
            signupModal.style.display = 'none';
            loginModal.style.display = 'flex';
        });
        mobileMenuBtn.addEventListener('click', toggleMobileMenu);
        faqItems.forEach(item => {
            item.querySelector('.faq-question').addEventListener('click', () => {
                item.classList.toggle('active');
            });
        });
        
        // Close modal when clicking outside
        window.addEventListener('click', (e) => {
            if (e.target === loginModal) loginModal.style.display = 'none';
            if (e.target === signupModal) signupModal.style.display = 'none';
        });
        
        // Functions
        function handleFileSelect(e) {
            const file = e.target.files[0] || (e.dataTransfer && e.dataTransfer.files[0]);
            
            if (!file) return;
            
            // Check file size
            const maxSize = 300 * 1024 * 1024; // 300MB
            if (file.size > maxSize) {
                alert('File size exceeds the 300MB limit. Please choose a smaller file.');
                return;
            }
            
            selectedFile = file;
            fileName.textContent = file.name;
            fileSize.textContent = formatFileSize(file.size);
            
            uploadContainer.style.display = 'none';
            fileInfo.style.display = 'block';
            
            checkUploadReady();
        }
        
        function handleDragOver(e) {
            e.preventDefault();
            e.stopPropagation();
            uploadContainer.style.borderColor = 'var(--primary)';
            uploadContainer.style.backgroundColor = 'rgba(108, 92, 231, 0.1)';
        }
        
        function handleDragLeave(e) {
            e.preventDefault();
            e.stopPropagation();
            uploadContainer.style.borderColor = 'var(--secondary)';
            uploadContainer.style.backgroundColor = 'transparent';
        }
        
        function handleDrop(e) {
            e.preventDefault();
            e.stopPropagation();
            handleDragLeave(e);
            fileInput.files = e.dataTransfer.files;
            handleFileSelect(e);
        }
        
        function formatFileSize(bytes) {
            if (bytes === 0) return '0 Bytes';
            const k = 1024;
            const sizes = ['Bytes', 'KB', 'MB', 'GB'];
            const i = Math.floor(Math.log(bytes) / Math.log(k));
            return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
        }
        
        function updateWordCount() {
            const text = messageInput.value.trim();
            const words = text ? text.split(/\s+/).length : 0;
            wordCount.textContent = `${words}/60 words`;
            
            if (words > 60) {
                wordCount.style.color = 'var(--danger)';
            } else {
                wordCount.style.color = 'inherit';
            }
            
            checkUploadReady();
        }
        
        function toggleConfirmPassword() {
            if (passwordInput.value.length > 0) {
                confirmPasswordInput.style.display = 'block';
            } else {
                confirmPasswordInput.style.display = 'none';
            }
            
            checkUploadReady();
        }
        
        function checkUploadReady() {
            const isFileSelected = selectedFile !== null;
            const isMessageValid = messageInput.value.trim().split(/\s+/).length <= 60;
            const isPasswordValid = passwordInput.value.length === 0 || 
                                 (passwordInput.value.length >= 4 && 
                                  passwordInput.value === confirmPasswordInput.value);
            
            uploadBtn.disabled = !(isFileSelected && isMessageValid && isPasswordValid);
        }
        
        function handleUpload() {
            // In a real app, this would upload to a server
            // For demo, we'll simulate the response
            
            // Generate random secret key
            const key = generateSecretKey();
            
            // Create share link
            const link = `${window.location.origin}/file/${key}`;
            
            // Show results
            shareLink.value = link;
            secretKey.value = key;
            uploadResult.style.display = 'block';
            
            // Scroll to results
            uploadResult.scrollIntoView({ behavior: 'smooth' });
            
            // Reset form for demo purposes
            setTimeout(() => {
                selectedFile = null;
                fileInput.value = '';
                messageInput.value = '';
                passwordInput.value = '';
                confirmPasswordInput.value = '';
                confirmPasswordInput.style.display = 'none';
                uploadBtn.disabled = true;
                fileInfo.style.display = 'none';
                uploadContainer.style.display = 'flex';
                wordCount.textContent = '0/60 words';
            }, 10000);
        }
        
        function generateSecretKey() {
            const chars = 'ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789';
            let result = '';
            for (let i = 0; i < 16; i++) {
                result += chars.charAt(Math.floor(Math.random() * chars.length));
            }
            return result;
        }
        
        function copyShareLink() {
            shareLink.select();
            document.execCommand('copy');
            
            // Change button text temporarily
            const originalText = copyLinkBtn.textContent;
            copyLinkBtn.textContent = 'Copied!';
            setTimeout(() => {
                copyLinkBtn.textContent = originalText;
            }, 2000);
        }
        
        function simulateFileAccess() {
            // In a real app, this would verify with a server
            // For demo, we'll show sample file details
            
            detailName.textContent = 'SampleFile.pdf';
            detailSize.textContent = '2.4 MB';
            detailMessage.textContent = 'Here are the documents you requested. Please review them and let me know your thoughts.';
            
            // Set expiry 3 days from now
            const expiryDate = new Date();
            expiryDate.setDate(expiryDate.getDate() + 3);
            detailExpiry.textContent = expiryDate.toLocaleDateString() + ' at ' + expiryDate.toLocaleTimeString();
            
            fileDetails.style.display = 'block';
            fileDetails.scrollIntoView({ behavior: 'smooth' });
        }
        
        function simulateDownload() {
            alert('In a real application, this would download the file. This is a demo.');
        }
        
        function closeModal() {
            loginModal.style.display = 'none';
            signupModal.style.display = 'none';
        }
        
        function toggleMobileMenu() {
            navLinks.style.display = navLinks.style.display === 'flex' ? 'none' : 'flex';
        }
        
        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function(e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth'
                    });
                    
                    // Close mobile menu if open
                    if (navLinks.style.display === 'flex') {
                        navLinks.style.display = 'none';
                    }
                }
            });
        });
        
        // Initialize AdSense
        (function() {
            // This would be handled by the AdSense script
            console.log('AdSense initialized');
        })();
    </script>
<!-- Supabase JS Library -->
